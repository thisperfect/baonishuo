<template name="message">

  <view class='message-container'>
    <image wx:if="{{ !isSend }}" class='message-img' src='/images/icon/icon1.jpg' />

    <view class='message-right-container'>
      <view class='message-money'>
        <text class='message-title'>{{isSend? command :user_info.nickName}}</text>
        <text class='message-money-sum'>{{reward}}å…ƒ</text>
      </view>
      <view class='message-date'>
        <text class='message-time'>{{ create_time }}</text>
        <text wx:if="{{ isSend }}" class='message-date-sum'>{{left_qty}}/{{qty}}</text>
      </view>
    </view>
  </view>


</template>